{
  "name": "fuchico",
  "version": "1.0.0",
  "description": "fuchico.exosite.io",
  "private": true,
  "main": "src/assets/index.js",
  "scripts": {
    "build-assets": "webpack --config ./webpack.config.js",
    "build-product-id": "mkdir --parents ./src/t2/config/ && echo \"export default '$PID';\" > ./src/t2/config/product-id.js",
    "build-routes": "find ./src/routes/ -type f | xargs cat | sed 's@/@/api/@' > ./deploy/routes.lua",
    "build-t2": "babel ./src/t2/ --out-dir ./deploy/t2/",
    "build-x-exosite-cik": "mkdir --parents ./src/t2/config/ && curl -s -H'Content-Type: application/x-www-form-urlencoded; charset=utf-8' -d \"vendor=$PID&model=$PID&sn=$SN\" 'http://m2.exosite.com/provision/activate' | sed \"s/.*/export default '&';/\" | tee ./src/t2/config/x-exosite-cik.js | xargs",
    "deploy": "npm run build-assets && npm run build-routes && exosite --deploy",
    "clean": "rm --force --recursive ./deploy/ ./node_modules/",
    "lint": "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore .",
    "start": "webpack-dev-server --config ./webpack.config.js",
    "t2": "sudo PATH=$PATH bash -c 't2 run ./deploy/t2/index.js'",
    "test": "mocha --opts ./test/assets/mocha.opts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foliolin/fuchico.git"
  },
  "author": "foliolin@users.noreply.github.com",
  "license": "AGPL-3.0+",
  "bugs": {
    "url": "https://github.com/foliolin/fuchico/issues"
  },
  "homepage": "https://github.com/foliolin/fuchico#readme",
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "chai": "^3.5.0",
    "css-loader": "^0.25.0",
    "dirty-chai": "^1.2.2",
    "eslint": "^3.7.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.22.0",
    "mocha": "^3.1.0",
    "mocha-loader": "^1.0.0",
    "node-sass": "^3.11.1",
    "postcss-loader": "^1.1.0",
    "sass-loader": "^4.0.2",
    "sinon": "^1.17.6",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "isomorphic-fetch": "^2.2.1",
    "material-ui": "^0.16.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.6",
    "react-tap-event-plugin": "^1.0.0",
    "redux": "^3.6.0",
    "redux-form": "^6.1.1",
    "redux-saga": "^0.12.1"
  },
  "engines": {
    "node": "^v6.9.1",
    "npm": "^v3.10.8"
  },
  "directories": {
    "test": "test"
  }
}
